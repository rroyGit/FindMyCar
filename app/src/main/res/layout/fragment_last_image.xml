<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastImageFragment">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgMyLocation"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/current_location_onclick" />

        <ImageButton
            android:id="@+id/imgMyCarLocation"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/current_car_location" />

        <ImageButton
            android:id="@+id/imgMyCarDriving"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/img_driving_mode" />

        <ImageButton
            android:id="@+id/imgMyCarWalking"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/img_walking_mode" />


    </LinearLayout>


</FrameLayout>